<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TransparentTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">?colorDefaultBackground</item>
        <item name="android:textColor">?colorTextActive</item>
        <item name="android:textColorPrimary">?colorTextActive</item>
        <!--<item name="android:windowAnimationStyle">@style/DialogAnim</item>-->
    </style>

    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_exit</item>
    </style>

    <style name="LoginTextInputAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <style name="LoginErrorAppearance">
        <item name="android:textColor">?colorError</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">?colorError</item>
    </style>

    <style name="TabStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChipAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LoginTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">10</item>
        <item name="counterTextAppearance">@style/LoginTextInputAppearance</item>
        <item name="errorEnabled">true</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

</resources>
